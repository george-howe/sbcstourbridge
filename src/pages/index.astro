---

<MainLayout title = 'Silent Book Club Stourbridge'>

	<!-- Banner -->
	
	<section class="w-full bg-hero bg-no-repeat bg-cover h-screen lg:min-h-[110vh] px-12 xl:px-0 flex items-center ">
		<div class="lg:max-w-[1200px] w-full mx-auto flex flex-col">
			<h1 class="text-[40px] leading-[50px] md:text-[60px] xl:text-[85px] pb-0 font-dm md:leading-[106.25px] w-full xl:max-w-[50%] text-white ml-auto bg-primary-slate p-6"> Silent Book Club Stourbridge </h1>
			<p class="text-base md:text-[22px] pb-5 font-nunito font-bold text-secondary-brick w-full lg:max-w-[50%] ml-auto bg-primary-slate p-6">A book club for introverts.</p>
			<!-- <Button text="Get Started"/> -->
		</div>
	</section>

	<!-- Summary Section -->

	<section class="bg-primary-slate">
		<div class="lg:max-w-[1200px] flex flex-col gap-8 lg:gap-10 lg:flex-row px-12 xl:px-0 w-full mx-auto pt-[50px] pb-[50px] lg:pt-[100px] lg:pb-[100px] justify-between ">
			{
				summaries.map((summary) => {
					return (
						<div class="w-full max-w-[358px] mx-auto flex flex-col justify-center items-center gap-3 md:gap-5">
							<h3 class="text-white font-nunito font-bold text-[22px] md:text-[25px] leading-loose text-center">{summary.title}</h3>
							<p class="text-primary-clay md:text-[22px] tracking-tight font-mulish leading-[33px] text-center"> {summary.text}</p>
						</div>
					)
				})
			}
		</div>
	</section>

	<!-- Next Event Section -->

	<section class="w-full lg:max-w-[1200px] mx-auto px-12 xl:px-0 flex flex-col-reverse justify-center items-center lg:grid grid-cols-2 pt-[50px] pb-[50px] lg:pt-[100px] lg:pb-[100px]">
		<div class="flex flex-col gap-8 max-w-[472px] items-center lg:items-start py-6">
			<h2 class="text-[30px] text-center capitalize lg:text-left font-nunito font-bold tracking-wide leading-8 md:leading-[62.50px] md:text-[50px] text-text-blue ">Join us at our next event...</h2>
			<p class="text-base md:text-[22px] text-center lg:text-left tracking-tight font-mulish text-text-gray leading-[33px]">{nextEvent.summary}</p>
			<p class="text-base md:text-[22px] text-center lg:text-left tracking-tight font-mulish text-text-gray leading-[33px]">{nextEvent.dateTime}</p>
			<Button text="RSVP Now" rsvpLink={nextEventRSVPLink}/>
		</div>

		<div>
			<img src={nextEvent.img} alt={nextEvent.alt} class="" />
		</div>
	</section>

	<!-- Future Events Section -->

	<section class="bg-primary-slate">
		<div class="lg:max-w-[1200px] px-12 xl:px-0 w-full mx-auto pt-[50px] pb-[50px] lg:pt-[100px] lg:pb-[100px]">
			<h2 class="font-nunito font-bold tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[50px] w-full lg:max-w-[50%] pb-2 mx-auto text-white">...And Our Future Events</h2>
			<p class="md:text-[22px] text-center tracking-tight font-mulishleading-[33px] lg:max-w-[60%] mx-auto text-primary-clay">Here's what we've got lined up.</p>
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-x-[104px] lg:gap-y-[56px] mt-12 lg:mt-[93px]">
				{
				events.map((event) => {
					return (
						<div class="w-full flex flex-col gap-4 bg-white p-8 rounded-[18px]">
						<img src={event.img} alt="" class="lg:h-80"/>
								<p class="flex flex-col tracking-tight leading-9">
									<span class="text-primary-slate text-lg lg:text-[25px] font-nunito font-bold">{event.location}</span>
									<span class="text-primary-clay text-base lg:text-lg font-mulish">{event.date}</span>
								</p>
								{event.announced ? <Button text="RSVP Now" rsvpLink={event.link}/> : null}
						</div>
				)
			})
			}
			</div>
		</div>
	</section>
</MainLayout>
 

<style>

  /* Hide scrollbar for Chrome, Safari and Opera */
  .no-scrollbar::-webkit-scrollbar {
      display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .no-scrollbar {
      -ms-overflow-style: none;  /* IE and Edge */
      scrollbar-width: none;  /* Firefox */
  }

</style>
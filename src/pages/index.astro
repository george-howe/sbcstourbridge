---
import MainLayout from "../layouts/main-layout.astro"
import Button from "../components/button.tsx"

const summaries = [
	{
		title: "BYOB(ook)",
		text: "No assigned literature, bring whatever you are currently reading - in whatever format you choose.",
	},
	{
		title: "Socialising Optional",
		text: "Simply an hour of silent uninterrupted reading with optional socialising before and after.",
	},
	{
		title: "Part of A Global Community",
		text: "With more than 1000 chapters in 50 countries, we gather to read in quiet camaraderie.",
	},
]
// next event
const sugarLoaf = {
	summary:
		"Why not spend an hour or two with a good book surrounded by nature over at Roots Allotments Sugar Loaf Fields!",
	img: "/sugarloaf.jpg",
	alt: "Allotment field with teepee",
	dateTime: "Tuesday 16th September 6.30pm - 8.30pm",
}

const drEamers = {
	summary:
		"Come join us for cocktails and an hour or two reading at Dr Eamers' Distillery Bar!",
	img: "/dreamers.jpg",
	alt: "Dr Eamers entrance",
	dateTime: "Thursday 20th October - 6.30pm - 8.30pm",
}

const hopvault = {
	summary:
		"Come join us for a couple of drinks and an hour or two of reading at The Hop Vault!",
	img: "/hopvault.jpg",
	alt: "Hop Vault entrance",
	dateTime: "Tues 4th November - 6.30pm - 8.30pm",
}

const tbc = {
	summary:
		"That's it for our in-person meets this year! We'll be spending December resting, working on our TBRs, and making plans for 2026! Keep your eyes peeled for updates...",
	img: "/xmas.jpg",
	alt: "A book surrounded by Christmas lights",
	dateTime: "",
}

const special = {
	summary:
		"Join us for SBC's Global Read-A-Thon - celebrating 10 years of reading together",
	img: "/bookshop.jpg",
	alt: "",
	dateTime: "Sunday 12th October - 7pm-9pm on our Whatsapp group",
}

const nextEvent = hopvault;
const nextEventRSVPLink =
	'https://www.eventbrite.co.uk/e/january-silent-book-club-the-hop-vault-tickets-1979158772165?aff=oddtdtcreator';

// upcoming
const events = [
// {
// 		announced: true,
// 		img: hopvault.img,
// 		location: `The Hop Vault`,
// 		date: 'Tues 13th Jan - 6.30pm-8.30pm',
// 		link: 'https://www.eventbrite.co.uk/e/january-silent-book-club-the-hop-vault-tickets-1979158772165?aff=oddtdtcreator',
// 		position: 'left'
// 	},
		{
		announced: true,
		img: drEamers.img,
		location: `Dr Eamers' Distillery Bar`,
		date: 'Thurs 29th Jan - 6.30pm-8.30pm',
		link: 'https://www.eventbrite.co.uk/e/january-silent-book-club-dr-eamers-distillery-bar-tickets-1978385439105?aff=oddtdtcreator',
		position: 'left'
	},
	// {
	// 	announced: false,
	// 	img: '/bookshop.jpg',
	// 	location: 'TBC',
	// 	date: '2026',
	// 	link: '',
	// 	position: 'left'
	// }
]
---

<MainLayout title="Silent Book Club Stourbridge">
	<!-- Banner -->

	<section
		class="w-full bg-hero bg-no-repeat bg-cover h-screen lg:min-h-[110vh] px-12 xl:px-0 flex items-center"
	>
		<div class="lg:max-w-[1200px] w-full mx-auto flex flex-col">
			<h1
				class="text-[40px] leading-[50px] md:text-[60px] xl:text-[85px] pb-0 font-dm md:leading-[106.25px] w-full xl:max-w-[50%] text-white ml-auto bg-primary-slate p-6"
			>
				Silent Book Club Stourbridge
			</h1>
			<p
				class="text-base md:text-[22px] pb-5 font-nunito font-bold text-secondary-brick w-full lg:max-w-[50%] ml-auto bg-primary-slate p-6"
			>
				A book club for introverts.
			</p>
			<!-- <Button text="Get Started"/> -->
		</div>
	</section>

	<!-- Summary Section -->

	<section class="bg-primary-slate">
		<div
			class="lg:max-w-[1200px] flex flex-col gap-8 lg:gap-10 lg:flex-row px-12 xl:px-0 w-full mx-auto pt-[50px] pb-[50px] lg:pt-[100px] lg:pb-[100px] justify-between"
		>
			{
				summaries.map(summary => {
					return (
						<div class="w-full max-w-[358px] mx-auto flex flex-col justify-center items-center gap-3 md:gap-5">
							<h3 class="text-white font-nunito font-bold text-[22px] md:text-[25px] leading-loose text-center">
								{summary.title}
							</h3>
							<p class="text-primary-clay md:text-[22px] tracking-tight font-mulish leading-[33px] text-center">
								{" "}
								{summary.text}
							</p>
						</div>
					)
				})
			}
		</div>
	</section>

	<!-- Next Event Section -->

	<section
		class="w-full lg:max-w-[1200px] mx-auto px-12 xl:px-0 flex flex-col-reverse justify-center items-center lg:grid grid-cols-2 pt-[50px] pb-[50px] lg:pt-[100px] lg:pb-[100px]"
	>
		<div
			class="flex flex-col gap-8 max-w-[472px] items-center lg:items-start py-6"
		>
			<h2
				class="text-[30px] text-center capitalize lg:text-left font-nunito font-bold tracking-wide leading-8 md:leading-[62.50px] md:text-[50px] text-text-blue"
			>
				Join us at our next event...
			</h2>
			<p
				class="text-base md:text-[22px] text-center lg:text-left tracking-tight font-mulish text-text-gray leading-[33px]"
			>
				{nextEvent.summary}
			</p>
			<p
				class="text-base md:text-[22px] text-center lg:text-left tracking-tight font-mulish text-text-gray leading-[33px]"
			>
				{nextEvent.dateTime}
			</p>
			<Button text="RSVP Now" rsvpLink={nextEventRSVPLink} />
		</div>

		<div>
			<img src={nextEvent.img} alt={nextEvent.alt} class="" />
		</div>
	</section>

	<!-- Future Events Section -->

	<section class="bg-primary-slate">
		<div
			class="lg:max-w-[1200px] px-12 xl:px-0 w-full mx-auto pt-[50px] pb-[50px] lg:pt-[100px] lg:pb-[100px]"
		>
			<h2
				class="font-nunito font-bold tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[50px] w-full lg:max-w-[50%] pb-2 mx-auto text-white"
			>
				...And Our Future Events
			</h2>
			<p
				class="md:text-[22px] text-center tracking-tight font-mulishleading-[33px] lg:max-w-[60%] mx-auto text-primary-clay"
			>
				Here's what we've got lined up.
			</p>
			<div
				class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-x-[104px] lg:gap-y-[56px] mt-12 lg:mt-[93px]"
			>
				{
					events.map(event => {
						return (
							<div class="w-full flex flex-col gap-4 bg-white p-8 rounded-[18px]">
								<img src={event.img} alt="" class="lg:h-80" />
								<p class="flex flex-col tracking-tight leading-9">
									<span class="text-primary-slate text-lg lg:text-[25px] font-nunito font-bold">
										{event.location}
									</span>
									<span class="text-primary-clay text-base lg:text-lg font-mulish">
										{event.date}
									</span>
								</p>
								{event.announced ? (
									<Button
										text="RSVP Now"
										rsvpLink={event.link}
									/>
								) : null}
							</div>
						)
					})
				}
			</div>
		</div>
	</section>

	<!-- At Home Section -->

	<section
		class="w-full lg:max-w-[1200px] mx-auto px-12 xl:px-0 flex flex-col-reverse justify-center items-center lg:grid grid-cols-2 pt-[50px] pb-[50px] lg:pt-[100px] lg:pb-[100px]"
	>
		<div
			class="flex flex-col gap-8 max-w-[472px] items-center lg:items-start py-6"
		>
			<h2
				class="text-[30px] text-center capitalize lg:text-left font-nunito font-bold tracking-wide leading-8 md:leading-[62.50px] md:text-[50px] text-text-blue"
			>
				Can't make our in-person meets?
			</h2>
			<p
				class="text-base md:text-[22px] text-center lg:text-left tracking-tight font-mulish text-text-gray leading-[33px]"
			>
				Join us every Wednesday evening on our WhatsApp group for our
				SBC: At Home Edition, 6.30-8.30pm
			</p>
			<Button
				text="Join us!"
				rsvpLink="https://chat.whatsapp.com/HR2Jaqi00d607ccUl0K6Vk"
			/>
		</div>

		<div>
			<img
				src="/athome.jpg"
				alt="women in a red jumper reading on a sofa"
				class=""
			/>
		</div>
	</section>
</MainLayout>

<style>
	/* Hide scrollbar for Chrome, Safari and Opera */
	.no-scrollbar::-webkit-scrollbar {
		display: none;
	}

	/* Hide scrollbar for IE, Edge and Firefox */
	.no-scrollbar {
		-ms-overflow-style: none; /* IE and Edge */
		scrollbar-width: none; /* Firefox */
	}
</style>

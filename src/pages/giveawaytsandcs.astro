<MainLayout title='Giveaway Terms and Conditions'>


  <!-- Banner Section -->

  <section class="w-full bg-primary-slate h-[35vh] lg:h-[50vh] flex justify-center items-end">
    <div
      class="py-[30px] lg:py-[41px] px-[60px] lg:px-[152px] flex flex-col justify-center items-center bg-white gap-2.5">
      <h1 class="text-[30px] leading-[40px] lg:text-[50px] lg:leading-[62px] font-dm capitalize text-primary-200 ">
        Silent Book Club Stourbridge Giveaway (Godless Cosmologies)</h1>
    </div>
  </section>

